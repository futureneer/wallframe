<launch>

  <group ns="/modulair/core">
  <node pkg="modulair_core" name="modulair_app_manager" type="app_manager.py" output="screen"/>
    <arg name="app_manifest_path" default="$(find modulair_core)/modulair_application_manifest.yaml" />
    <param name="paths/app_manifest" textfile="$(arg app_manifest_path)" />
    <param name="paths/application_path" value="/home/kel/modulair_applications" /> 
  </group>
  <node pkg="modulair_core" name="modulair_infobar" type="modulair_infobar.py" output="screen"/>

  <param name="/modulair/menu/params/cursor_path" value="$(find modulair_core)/assets/cursor.jpg" /> 
  
  <rosparam>
    modulair:
      core:
        params:
          x: 1680
          y: 24
          width: 5760
          height: 3197
      app:
        params:
          height_percentage: .97
      infobar:
        params:
          height_percentage: .03    
      menu:
        params:
          height_percentage: .97
          workspace_size: [-1200,1200,-600,600,1500,3000]
          border_scale: .02
          y_offset: 200
  </rosparam>


</launch>
