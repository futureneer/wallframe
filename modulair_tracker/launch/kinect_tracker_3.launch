<launch>
	<arg name="camera3" default="kinect3" />
	<arg name="device_id3" default="#3" />

	<include file="$(find openni_launch)/launch/openni.launch">
		<arg name="camera" value="$(arg camera3)" />
		<arg name="device_id" value="$(arg device_id3)" />
		<arg name="rgb_camera_info_url"   value="file://$(env ROS_HOME)/camera_info/rgb_$(arg device_id3).yaml" />
		<arg name="depth_camera_info_url" value="file://$(env ROS_HOME)/camera_info/depth_$(arg device_id3).yaml" />
	</include>

	<node name="tracker3" output="screen" pkg="openni_tracker_improved" type="openni_tracker" respawn="true">
		<param name="device_id" type="str" value="$(arg device_id3)" />
		<param name="tf_prefix" value="kinect_tracker_3" />
	</node>

	<node pkg="tf" type="static_transform_publisher" name="kinect3_transformation" args="-1.85 0 1.25 -.8 .5 0  /world /kinect3_link 10"/>
	<node pkg="tf" type="static_transform_publisher" name="kinect3_tracker_trans" args="0 0 0 0 0 0 /kinect3_link /kinect_tracker_3/openni_depth_frame 10"/>

</launch>
