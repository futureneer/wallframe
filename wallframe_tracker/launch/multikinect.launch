<launch>
	<arg name="camera1" default="kinect1" />
	<arg name="device_id1" default="#1" />

	<arg name="camera2" default="kinect2" />
	<arg name="device_id2" default="#2" />

	<include file="$(find openni_launch)/launch/openni.launch">
		<arg name="camera" value="$(arg camera1)" />
		<arg name="device_id" value="$(arg device_id1)" />
		<arg name="rgb_camera_info_url"   value="file://$(env ROS_HOME)/camera_info/rgb_$(arg device_id1).yaml" />
		<arg name="depth_camera_info_url" value="file://$(env ROS_HOME)/camera_info/depth_$(arg device_id1).yaml" />
	</include>

	<include file="$(find openni_launch)/launch/openni.launch">
		<arg name="camera" value="$(arg camera2)" />
		<arg name="device_id" value="$(arg device_id2)" />
		<arg name="rgb_camera_info_url"   value="file://$(env ROS_HOME)/camera_info/rgb_$(arg device_id2).yaml" />
		<arg name="depth_camera_info_url" value="file://$(env ROS_HOME)/camera_info/depth_$(arg device_id2).yaml" />
	</include>

	<node name="static_kinect_link_tf1" pkg="tf" type="static_transform_publisher" args="0 -1 -.5 0 0 0 /center_frame /kinect1_link 10" respawn="true" />
	<node name="static_kinect_link_tf2" pkg="tf" type="static_transform_publisher" args="0 1 -.5 0 0 0 /center_frame /kinect2_link 10" respawn="true" />

</launch>
